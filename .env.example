# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env or .env.local to version control

# ============================================================================
# BLOCKCHAIN & RPC CONFIGURATION
# ============================================================================

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
# OR: https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Ethereum Mainnet (Production)
MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# Polygon Mainnet (Layer 2, lower fees)
POLYGON_RPC_URL=https://polygon-rpc.com
# OR: https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Polygon Mumbai Testnet
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Arbitrum (Optional Layer 2)
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# ============================================================================
# WALLET & DEPLOYMENT CONFIGURATION
# ============================================================================

# Private key for contract deployment (TESTNET ONLY - never use mainnet key)
# Get test ETH from faucet before deploying
# ⚠️ SECURITY: Use a test account, never commit this file
PRIVATE_KEY=your_test_wallet_private_key_here_0x...

# Mnemonic phrase alternative (optional, used by Hardhat)
MNEMONIC=word1 word2 word3 ... word12

# ============================================================================
# SMART CONTRACT VERIFICATION
# ============================================================================

# Etherscan API key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# PolygonScan API key (for Polygon contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan API key (for Arbitrum verification, if needed)
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Application environment
NEXT_PUBLIC_ENVIRONMENT=development
# Options: development, staging, production

# Network selection (frontend)
NEXT_PUBLIC_NETWORK=sepolia
# Options: localhost, sepolia, polygon, polygon-mumbai, mainnet

# Smart contract addresses (update after deployment)
NEXT_PUBLIC_NAMING_REGISTRY_ADDRESS=0x5FbDB2315678afccb333f8a9c45b65d30061dE7a
NEXT_PUBLIC_CELESTIAL_NFT_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# Frontend RPC endpoints (public, can be exposed)
NEXT_PUBLIC_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# Frontend services
NEXT_PUBLIC_INFURA_API_KEY=your_infura_key_here
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_wallet_connect_project_id

# Etherscan/Block explorer URLs
NEXT_PUBLIC_ETHERSCAN_URL=https://sepolia.etherscan.io
NEXT_PUBLIC_POLYGONSCAN_URL=https://polygonscan.com

# API endpoint (if backend services deployed)
NEXT_PUBLIC_API_URL=http://localhost:3001
# Production: https://api.stellarprovenance.com

# Enable analytics (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ============================================================================
# BACKEND CONFIGURATION (Optional)
# ============================================================================

# Server configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/stellar_provenance_db
# Example: postgresql://postgres:mypassword@localhost:5432/stellar-provenance

# Redis cache
REDIS_URL=redis://localhost:6379
# For Upstash (hosted Redis): redis://:password@host:port

# Blockchain services
BLOCKCHAIN_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
BLOCKCHAIN_NETWORK=sepolia

# Contract addresses (backend)
NAMING_REGISTRY_ADDRESS=0x5FbDB2315678afccb333f8a9c45b65d30061dE7a
CELESTIAL_NFT_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512

# ============================================================================
# ASTRONOMICAL DATA APIs
# ============================================================================

# SkyMapper Database
SKYMAPPER_API_URL=https://skymapper.anu.edu.au/
SKYMAPPER_API_KEY=your_skymapper_api_key

# ESA Gaia Mission
GAIA_API_URL=https://gea.esac.esa.int/archive/
GAIA_API_KEY=your_gaia_api_key

# NASA APIs
NASA_API_KEY=your_nasa_api_key_from_api.nasa.gov

# ============================================================================
# IPFS & DECENTRALIZED STORAGE
# ============================================================================

# Pinata (IPFS pinning service)
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Or: NFT.storage (alternative)
NFT_STORAGE_API_KEY=your_nft_storage_api_key

# Or: Web3.storage (alternative)
WEB3_STORAGE_API_KEY=your_web3_storage_api_key

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Secret (for API authentication)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session secret (for server sessions)
SESSION_SECRET=your_super_secret_session_key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3000,https://stellarprovenance.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry error tracking
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# DataDog monitoring (alternative)
DATADOG_API_KEY=your_datadog_api_key

# Log level
LOG_LEVEL=info
# Options: debug, info, warn, error

# ============================================================================
# DEPLOYMENT & CI/CD
# ============================================================================

# Vercel deployment
VERCEL_TOKEN=your_vercel_token_for_ci_cd

# GitHub Actions
GITHUB_TOKEN=your_github_token_for_ci_cd

# AWS (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=stellar-provenance-storage

# ============================================================================
# GOVERNANCE & DAO (Phase 3+)
# ============================================================================

# Governance token configuration (future)
GOVERNANCE_TOKEN_ADDRESS=0x...
GOVERNOR_ADDRESS=0x...
TIMELOCK_ADDRESS=0x...

# Treasury management
TREASURY_ADDRESS=0x...
TREASURY_PRIVATE_KEY=reserved_for_multisig_or_timelock

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable/disable features for testing
NEXT_PUBLIC_FEATURE_MARKETPLACE=true
NEXT_PUBLIC_FEATURE_GOVERNANCE=false
NEXT_PUBLIC_FEATURE_QUESTS=false
NEXT_PUBLIC_FEATURE_LEADERBOARDS=false

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Hardhat configuration
HARDHAT_NETWORK=sepolia

# Show debug logs (set to true for verbose output)
DEBUG=false

# Mock data (for testing without real contracts)
USE_MOCK_DATA=false

# ============================================================================
# NOTES
# ============================================================================

# 1. NEVER commit .env or .env.local to git
# 2. Use different keys for testnet vs mainnet
# 3. Rotate secrets regularly
# 4. Use hardware wallet for mainnet deployment
# 5. Test all configurations in staging first
# 6. Use GitHub Secrets for CI/CD
# 7. Refer to SECURITY.md for security best practices

